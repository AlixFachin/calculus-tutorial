---
const { enabled, href, label} = Astro.props;
---

{
    enabled ? (
        <a
            href={href}
            class="py-2 px-4 bg-blue-300 dark:bg-blue-800 rounded-4xl m-2"
        >
            {label}
        </a>
    ) : (
        <div class="py-2 px-4 bg-gray-300 dark:bg-gray-600 rounded-4xl m-2">{label}</div>
    )
}